@{
    ViewBag.Title = "View DataSet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-heading">
    <h4>View Dataset</h4>
</div>
<div class="container-fluid">
    <div class="panel" style="border: 1px solid #dedede; padding-top: 10px; padding-bottom: 12px;">
        <div class="row">
            <div class="col-md-12">
                <div class=" col-md-3">
                    <label>Source Data: </label><label id="lblCompnayname"></label>
                </div>
                <div class=" col-md-3">
                    <label>Dataset Name: </label><label id="lblDatasername"></label>
                </div>
                <div class=" col-md-3">
                    <label>Created Date: </label><label id="lblCreateddate"></label>
                </div>
                <div class=" col-md-3">
                    <label>Modified Date: </label><label id="lblModifieddate"></label>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="devDescription">
        <div class="col-md-6">
            <label>Dataset Description</label>
            <textarea class="form-control" name="taDatasetDescription" id="taDatasetDescription" placeholder="Dataset Description"></textarea>
        </div>
        <div class="col-md-5">
            <button class="btn btn-primary pull-right btnAdd" id="btnAdd">Add Row</button>
            <button class="btn btn-success pull-right btnSave" id="btnSave">Save</button>
            <button class="btn btn-warning pull-right btnCancel" id="btnCancel">Cancel</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button class="btn btn-primary pull-right btnEdit" id="btnEdit">Edit</button>
        </div>
    </div>


    <div class="row">
        <div class="col-md-11">
            <div class="panel">
                <div class="panel-body">
                    <table class="table table-striped table-bordered" id="DataSetList">
                        <thead class="the-box dark full">
                            <tr class="headerRow">
                                <th>MonthYear</th>
                                <th>Value</th>
                                @* <th>Monthly</th>*@
                                @*<th>Column 4</th>
                                    <th>Column 5</th>*@
                            </tr>
                        </thead>

                        <tbody>
                            <tr style="display:none;">
                                <td>Sample Description</td>
                                <td>Sample Description</td>
                                @*<td>Sample Description</td>*@
                                <td class="hide"></td>
                                <td class="btnRemoveRow"><button title="Remove row" type="button"><i class="fa fa-times"></i></button></td>
                                @*<td>Sample Description</td>
                                    <td>Sample Description</td>
                                    <td><button class="btnRemoveRow" title="Remove row" type="button"><i class="fa fa-times"></i></button></td>*@

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-11 text-right">
            <button class="btn btn-primary pull-right btnEdit" id="btnEdit1">Edit</button>
        </div>
    </div>

    <div class="row">

        <div class="col-md-11 text-right">
            <button class="btn btn-primary pull-right btnAdd" id="btnAdd">Add Row</button>
            <button class="btn btn-success pull-right btnSave" id="btnSave">Save</button>
            <button class="btn btn-warning pull-right btnCancel" id="btnCancel">Cancel</button>
        </div>
    </div>
</div>

